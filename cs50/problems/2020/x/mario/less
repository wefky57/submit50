// code for creating half pyramid in C language
#include <cs50.h>
#include <stdio.h>

int main(void)
{
    int n;
    do
    {
        // Set integer input n and store user input name "hieght"
        n = get_int("Height: ");
    }
    // while loop so user cannot put a hieght more than 8 
    while (n > 8);
    // for loops to excute the required output
    for (int i = n; i >= 1; i--)
    {
        for (int j = 1; j <= i; j++)
        {
            printf(" ");
        }
        for (int k = n; k >= i; k--)
        {
            printf("#");
        }
        printf("\n");
    }
}
